<dic class="container mt-5">

    <div class="row justify-content-center">

        <div class="col-3">

            <h2>Edit Movie</h2>
            <hr>
        </div>
    </div>
</dic>

<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <form action="/movies/{{_id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title" value="{{title}}">
                </div>

                <div class="mb-3">
                    <label for="genre" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="genre" name="genre" value="{{genre}}">
                </div>

                <div class="mb-3">
                    <label for="plot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="plot" name="plot" value="{{plot}}">
                </div>

                <div class="mb-3">
                    <label for="cast" class="form-label">Cast:</label>
                    <select class="form-select" aria-label="multiple select example">
                        {{#each cast}}
                        <option>{{name}}</option>
                        {{/each}}
                    </select>
                </div>

                <input type="hidden" name="movie_id" value="{{_id}}">

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Edit Movie</button>
                </div>

            </form>
        </div>
    </div>
</div>